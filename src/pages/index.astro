---
import '../styles/global.css';
import Layout from "../layouts/main.astro";
import BlogHomeDisplay from '@/components/BlogHomeDisplay.astro';
import ReactBlog from '@/components/react/ReactBlog';
import SearchSuggestion from '@/components/react/search/SearchSuggestion';
const BACKEND_API = "https://test-subdomain.keyrunasir.com";
let blogs = null;
try {
	const data = await fetch(`${BACKEND_API}/api/blog/fetchallblogs`);
    const response = await data.json();
	if(response.success){

		blogs = response.post;

	} else {
		blogs = null;
	}
} catch (error) {
	blogs = null;
};
